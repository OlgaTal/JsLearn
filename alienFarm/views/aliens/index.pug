extends  ../shared/template

block title
  h1 Our Aliens list page

block content
  .row
    .col-xs-6
      table.table.table-striped
        thead
          tr
            th Name
            th Photo
            th Planet
            th
        tbody
          each alien in aliens
            - var link = '/aliens/' + alien.id
            tr
              td
                a(href=link)= alien.name
              td
                img.img-responsive.thumbnail.alien(src=alien.photo)
              td
                img.img-responsive.thumbnail.alien(src=alien.planet)
              td
                a(href='/aliens/delete/' + alien.id)
                  i.fa.fa-trash-o.fa-2x
    .col-xs-6
